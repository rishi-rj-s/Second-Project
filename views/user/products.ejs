<%- include('../partials/userHeader') %>

    <!-- Heading -->
    <div class="bg-primary shadow-lg">
        <div class="container py-3 shadow-lg">
            <!-- Breadcrumb -->
            <nav class="d-flex">
                <h5 class="mb-0">
                    <a href="/" class="text-white-50" style="text-decoration: none;">Home</a>
                    <span class="text-white mx-2"> > </span>
                    <a href="/user/category/products/<%= data[0].category._id %>" class="text-white"
                        style="text-decoration: none;">Category </a>
                </h5>
            </nav>
            <!-- Breadcrumb -->
        </div>
    </div>

    <main data-bs-spy="scroll" data-bs-target="#navbar-example2" data-bs-root-margin="0px 0px -40%"
        data-bs-smooth-scroll="true" class="scrollspy-example bg-body-tertiary p-3 rounded-2" tabindex="0">

        <div class="d-flex justify-content-center my-5">
            <h5>Products Based on the category : <%= data[0].category.name %>
            </h5>
        </div>

        <div class="container" id="scrollspyHeading1">
            <% data.forEach(product=>{ %>
                <div class="row p-3 w-100" style="height: auto;">
                    <div class="col-lg-8 col-md-7 col-sm-12 mb-3">
                        <div class="card h-100">
                            <div class="row g-0">
                                <div class="col-md-4">
                                    <img src="/<%= product.images[0] %>"
                                        class="img-fluid rounded-start w-100 h-100 object-fit-cover" alt="...">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <%= product.name %>
                                        </h5>
                                        <p class="card-text">Description : <%= product.description %>
                                        </p>
                                    </div>
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item">Category : <%= product.category.name %>
                                        </li>
                                        <li class="list-group-item">
                                            Rating :
                                            <% for (let i=1; i <=5; i++) { %>
                                                <% if (i <=Math.floor(product.rating)) { %>
                                                    <i class="fa fa-star text-warning"></i>
                                                    <% } else if (i===Math.ceil(product.rating) && product.rating % 1
                                                        !==0) { %>
                                                        <i class="fa fa-star-half-alt text-warning"></i>
                                                        <% } else { %>
                                                            <i class="fa fa-star text-muted"></i>
                                                            <% } %>
                                                                <% } %>
                                        </li>
                                    </ul>
                                    <div class="card-body">
                                        <a href="/user/productDetailed/<%= product._id %>">
                                            <button type="button" class="btn btn-outline-info">View Details</button>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-5 col-sm-12 mb-3">
                        <div class="card border-dark h-100">
                            <div class="card-header">
                                <h3>Rs. <%= product.rate %>
                                </h3>
                            </div>
                            <div class="card-body">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        Rating :
                                        <% for (let i=1; i <=5; i++) { %>
                                            <% if (i <=Math.floor(product.rating)) { %>
                                                <i class="fa fa-star text-warning"></i>
                                                <% } else if (i===Math.ceil(product.rating) && product.rating % 1 !==0)
                                                    { %>
                                                    <i class="fa fa-star-half-alt text-warning"></i>
                                                    <% } else { %>
                                                        <i class="fa fa-star text-muted"></i>
                                                        <% } %>
                                                            <% } %>
                                    </h5>
                                </div>
                                <p class="card-text">Some quick example text to build on the card title and make up the
                                    bulk of the card's content.</p>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>

        <%- include('../partials/footer') %>