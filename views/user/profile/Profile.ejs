                                    <p>
                                        <%= user.email %>
                                    </p>
                                    <i class="far fa-edit mb-5" id="nameEditButton" style="cursor: pointer;"></i>
                                    <div id="editNameContainer" style="display: none;">
                                        <input type="text" id="nameInput" value="<%= user.name %>"
                                            class="form-control" />
                                        <button id="updateNameButton" class="btn btn-success my-2">Update</button>
                                    </div>
                                </div>
                                <div class="col-md-8 ">
                                    <div class="card-body p-4">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <h6>Information</h6>
                                        </div>
