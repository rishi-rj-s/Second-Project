                                            <a href="#!"><i class="fab fa-facebook-f fa-lg me-3"></i></a>
                                            <a href="#!"><i class="fab fa-twitter fa-lg me-3"></i></a>
                                            <a href="#!"><i class="fab fa-instagram fa-lg"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


    </section>


    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const nameEditButton = document.getElementById('nameEditButton');
            const userName = document.getElementById('userName');
            const editNameContainer = document.getElementById('editNameContainer');
            const nameInput = document.getElementById('nameInput');
            const updateNameButton = document.getElementById('updateNameButton');
    
            nameEditButton.addEventListener('click', () => {
                userName.style.display = 'none';
                editNameContainer.style.display = 'block';
                nameInput.value = userName.innerText.trim(); // Set the input value to the current name
            });
    
            updateNameButton.addEventListener('click', async () => {
                const newName = nameInput.value;
    
                // Regex pattern: only allows letters and spaces, 2-50 characters long
                const namePattern = /^(?=.*[A-Za-z])[A-Za-z\s]{2,50}$/;
    
                if (!namePattern.test(newName)) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Invalid Name',
                        text: 'Name must be between 2 and 50 characters and can only contain letters and spaces.',
                    });
                    return;
                }
    
                try {
                    const response = await fetch('/user/updateProfile', {
                        method: 'PATCH',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ name: newName })
                    });
                    if (response.ok) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Success',
                            text: 'Name updated successfully!',
                            showConfirmButton: false,
                            timer: 1500
                        }).then(() => {
                            window.location.reload();
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Update Failed',
                            text: 'Failed to update name. Please try again.',
                        });
                    }
                } catch (error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'An error occurred. Please try again later.',
                    });
                }
            });
        });
    </script>
    

    <script>
        const urlParams = new URLSearchParams(window.location.search);
        const message = urlParams.get('msg'); // Change 'message' to 'msg'
        if (typeof message !== 'undefined') {
            if (message.includes('noPass')) {
                Swal.fire({
                    title: "Failure",
                    text: "The user is logged in through Google Auth, hence no Password",
                    icon: "error",
                    confirmButtonText: 'OK'
                });
                window.history.replaceState({}, document.title, window.location.pathname);
            }
        }
    </script>


